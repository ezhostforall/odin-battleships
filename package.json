{
  "name": "battleship",
  "version": "1.0.0",
  "description": "A Battleship game implemented using TDD with JavaScript",
  "main": "src/index.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "start": "node src/index.js",
    "build": "node build.js"
  },
  "keywords": ["battleship", "game", "tdd", "javascript"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^30.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\..+)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/src/**/*.test.js"
    ],
    "verbose": true
  }
}